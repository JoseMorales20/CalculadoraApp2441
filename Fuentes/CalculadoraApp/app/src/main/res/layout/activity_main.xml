<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView

        android:layout_marginTop="@dimen/marginBase"
        android:src="@drawable/calculator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tamanioBase"></ImageView>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_marginTop="@dimen/marginBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:text="N1"
            android:gravity="center"
            android:layout_weight="2"
            android:textSize="@dimen/tamanioLetra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <EditText

            android:id="@+id/n1Txt"
            android:inputType="number"
            android:layout_weight="1"
            android:textSize="@dimen/tamanioLetra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>
    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="@dimen/marginBase2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:text="N2"
            android:gravity="center"
            android:layout_weight="2"
            android:textSize="@dimen/tamanioLetra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

        <EditText

            android:id="@+id/n2Txt"
            android:inputType="number"
            android:layout_weight="1"
            android:textSize="@dimen/tamanioLetra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>


    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="@dimen/marginBase2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button

            android:onClick="sumar"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:text="@string/sumarText"
            android:background="@color/colorSuma"
            android:textColor="@color/primary_light"
            android:textSize="@dimen/tamanioLetra"
            android:layout_height="@dimen/tamanioBtn" />

        <Button

            android:onClick="restar"
            android:layout_weight="1"
            android:background="@color/colorResta"
            android:textColor="@color/primary_light"
            android:textSize="@dimen/tamanioLetra"
            android:text="-"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tamanioBtn"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/marginBase"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button

            android:onClick="multiplicar"
            android:layout_weight="1"
            android:background="@color/colorMulti"
            android:textColor="@color/primary_light"
            android:textSize="@dimen/tamanioLetra"
            android:text="*"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tamanioBtn"></Button>

        <Button

            android:onClick="dividir"
            android:layout_weight="1"
            android:background="@color/colorDiv"
            android:textColor="@color/primary_light"
            android:textSize="@dimen/tamanioLetra"
            android:text="/"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tamanioBtn"></Button>


    </LinearLayout>








</LinearLayout>